<script>
  import { actions } from "astro:actions";

  const blog_id = /blog\/([^#\/]+)/.exec(window.location.pathname);
  if (blog_id && blog_id[1]) {
    const blog = blog_id[1].toString();
    const likeBtn = document.querySelector("#like-button");
    const likeCount = document.querySelector("#like-count");
    likeBtn?.addEventListener("click", () => {
      actions.incrementLikes({ blog }).then(({ data, error }) => {
        if (!error && likeCount) {
          likeCount.innerHTML = data[0].likes.toString();
        }
      });
    });
  }
</script>
