---
import type { CollectionEntry } from "astro:content";
import { db, eq, sql, MetaData } from "astro:db";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, heroImage, pubDate } = Astro.props;

const { slug } = Astro.params;
const res = await db
  .insert(MetaData)
  .values({ blog: slug!, views: 1, likes: 0 })
  .onConflictDoUpdate({
    target: MetaData.blog,
    set: { views: sql`${MetaData.views} + 1` },
  })
  .returning();

const metaData = res[0];
---

<html lang="en">
  <head>
    <BaseHead title="width:" 100%; {title} description={description} image={heroImage} />
    <style>
      main {
        width: auto;
        max-width: 100%;
        padding-top: 1em;
      }
      .hero-image {
        margin-inline: auto;
        width: 100%;
      }
      .hero-image img {
        margin-inline: auto;
        border-radius: 5px;
        box-shadow: var(--box-shadow);
      }
      .prose {
        width: 960px;
        max-width: calc(100% - 2em);
        margin: auto;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="hero-image">
          {
            heroImage && (
              <img
                width={"100%"}
                height={300}
                src={heroImage}
                style="object-fit: cover; width: 100%; height: 350px; max-width: 1000px;"
                alt=""
              />
            )
          }
        </div>
        <div class="prose">
          <div class="title">
            <div>views: {metaData.views}</div>
            <div>likes: {metaData.likes}</div>
            <div class="date">
              <div>{pubDate}</div>
            </div>
            <h1>{title}</h1>
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
