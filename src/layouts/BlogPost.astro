---
import type { CollectionEntry } from "astro:content";
import { db, sql, eq, MetaData } from "astro:db";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Eye from "../images/Eye.astro";
import Heart from "../images/Heart.astro";
type Props = CollectionEntry<"blog">["data"];

const { title, description, heroImage, pubDate } = Astro.props;

const { slug } = Astro.params;
const res = await db
  .insert(MetaData)
  .values({ blog: slug!, views: 1, likes: 0 })
  .onConflictDoUpdate({
    target: MetaData.blog,
    set: { views: sql`${MetaData.views} + 1` },
  })
  .returning();

const metaData = res[0];

async function incrementLikes(blogSlug: string) {
  const updatedLikes = await db
    .update(MetaData)
    .set({ likes: sql`${MetaData.likes} + 1` })
    .where(eq(MetaData.blog, blogSlug))
    .returning();
  return updatedLikes[0];
}
