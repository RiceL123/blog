      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="hero-image">
          {
            heroImage && (
              <img
                width={"100%"}
                height={300}
                src={heroImage}
                style="object-fit: cover; width: 100%; height: 350px; max-width: 1000px;"
                alt=""
              />
            )
          }
        </div>
        <div class="prose">
          <div class="title">
            <div class="date">
              <div>{pubDate}</div>
            </div>
            <h1>{title}</h1>
            <div class="flex gap-6 mb-4">
              <div class="flex gap-2 items-center">
                <Eye />
                <p style="margin-bottom: 0;">
                  {metaData.views}
                </p>
              </div>
              <div class="flex gap-2 items-center">
                <button id="like-button">
                  <Heart />
                </button>
                <p style="margin-bottom: 0;" id="like-count">
                  {metaData.likes}
                </p>
              </div>
            </div>
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>

